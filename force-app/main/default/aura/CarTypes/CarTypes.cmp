<aura:component implements="forceCommunity:availableForAllPageTypes" access="global" controller="CarTypeController" >
    
    <!-- attributes -->
    <aura:attribute name="data" type="Car_Type__c[]"/>
    <aura:attribute name="columns" type="List"/>
    
    <!-- handlers-->
    <aura:handler name="init" value="{! this }" action="{! c.init }"/>
    
	<!-- the container element determine the height of the datatable -->
    <div style="height: 300px">
        <fieldset class="slds-box slds-theme--default ">
        <lightning:datatable
                keyField="id"
                data="{! v.data }"
                columns="{! v.columns }"
                hideCheckboxColumn="true"/>
     	</fieldset>
    </div>
	
</aura:component>